<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/home_pannel_background_iv"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:src="@drawable/img_first_album_default"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ImageView
            android:id="@+id/home_pannel_btn_nugu_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_mike"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_ticket_iv"
            app:layout_constraintTop_toTopOf="parent"
            />
        <ImageView
            android:id="@+id/home_pannel_btn_ticket_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_ticket"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_setting_iv"
            app:layout_constraintTop_toTopOf="parent"

            />

        <ImageView
            android:id="@+id/home_pannel_btn_setting_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_setting"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/home_pannel_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매혹적인 음색의 여성 보컬\n팝"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_nugu_iv"/>

        <ImageView
            android:id="@+id/home_pannel_btn_play_iv"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:src="@drawable/btn_panel_play_large"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_nugu_iv"
            />

        <ImageView
            android:id="@+id/home_pannel_album_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_background_iv"/>
        <TextView
            android:id="@+id/home_pannel_album_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 36곡 2020.06.05"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_img_iv"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/home_pannel_album_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In my Bed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singer_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_album_img_iv"
            />
        <TextView
            android:id="@+id/home_pannel_album_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bear"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_album_title_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img_iv"

            />


        <TextView
            android:id="@+id/home_pannel_singer_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="오늘 발매 음악"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/home_today_music_total_tv" />
        
        <ImageView
            android:="@+id/home_pannel_singer_picture"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@drawable/btn_main_arrow_more"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/home_pannel_singer_title_tv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_singer_title_tv"
            />
        

        <TextView
            android:id="@+id/home_today_music_total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="종합"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/home_today_music_korea_tv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv" />



        <TextView
            android:id="@+id/home_today_music_korea_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="국내"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/home_today_music_pop_tv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv" />

        <TextView
            android:id="@+id/home_today_music_pop_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="해외"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv" />


        <ImageView
            android:id="@+id/home_pannel_today_singer_picture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toStartOf="@id/home_pannel_singer_title_tv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_singer_title_tv" />

        <TextView
            android:id="@+id/home_pannel_singer_album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Butter"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_singer_picture"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"

            />
        <TextView
            android:id="@+id/home_pannel_singer_album_singername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방탄소년단"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_singer_album_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"

            />


        <ImageView
            android:id="@+id/home_pannel_viewpaper1_exp"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/img_home_viewpager_exp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_singer_album_singername" />

        <TextView
            android:id="@+id/home_pannel_viewpaper1_txt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매일 들어도 좋은 팟 캐스트"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_viewpaper1_exp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"
            />


        <ImageView
            android:id="@+id/home_pannel_potcast_exp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img_potcast_exp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_viewpaper1_txt_tv"
            app:layout_constraintStart_toStartOf="@+id/home_pannel_viewpaper1_txt_tv"
            />

        <TextView
            android:id="@+id/home_pannel_potcast_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_potcast_exp"
            app:layout_constraintStart_toStartOf="@+id/home_pannel_potcast_exp"
            android:text="제목"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17dp"
            />

        <TextView
            android:id="@+id/home_pannel_potcast_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가수"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_potcast_text_tv"
            app:layout_constraintStart_toStartOf="@+id/home_pannel_potcast_text_tv"
            />

        <TextView
            android:id="@+id/home_pannel_video_collection_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비디오 콜랙션"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="19dp"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_potcast_name_tv"
            app:layout_constraintStart_toStartOf="@id/home_pannel_potcast_name_tv"
            />

        <ImageView
            android:id="@+id/home_pannel_video_exp_iv"
            android:layout_width="280dp"
            android:layout_height="130dp"
            android:src="@drawable/img_video_exp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_video_collection_tv"
            app:layout_constraintStart_toStartOf="@+id/home_pannel_video_collection_tv"


            />

        <TextView
            android:id="@+id/home_pannel_video_text_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_video_exp_iv"
            app:layout_constraintStart_toStartOf="@id/home_pannel_video_exp_iv"

            />
        <TextView
            android:id="@+id/home_pannel_video_text_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가수"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_video_text_title_tv"
            app:layout_constraintStart_toStartOf="@id/home_pannel_video_text_title_tv"

            />

        <ImageView
            android:id="@+id/home_pannel_dicovery_banner_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/discovery_banner_aos"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_video_text_name_tv"
            app:layout_constraintStart_toStartOf="@id/home_pannel_video_text_name_tv"
            android:scaleType="centerCrop"
            />
        
        <ImageView
            android:id="@+id/home_pannel_viewpaper2_exp_iv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"
            android:src="@drawable/img_home_viewpager_exp2"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_dicovery_banner_iv"
            app:layout_constraintStart_toStartOf="@id/home_pannel_dicovery_banner_iv"


            />

        <ImageView
            android:id="@+id/home_pannel_facebook_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="140dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_main_facebook"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_viewpaper2_exp_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <ImageView
            android:id="@+id/home_pannel_instagram_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_main_instagram"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_viewpaper2_exp_iv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_facebook_iv"
android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/home_pannel_youtube_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_main_youtube"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_viewpaper2_exp_iv"
           app:layout_constraintStart_toEndOf="@id/home_pannel_instagram_iv"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/home_pannel_twitter_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_main_twitter"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_viewpaper2_exp_iv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_youtube_iv"
            android:layout_marginLeft="20dp"/>


        <TextView
            android:id="@+id/home_pannel_undericon_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(주)드림어스 컴퍼니 사업자 정보"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_twitter_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"


            />
        <ImageView
            android:id="@+id/home_pannel_undericon_arrow_iv"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:src="@drawable/btn_main_arrow_more"
            app:layout_constraintTop_toTopOf="@id/home_pannel_undericon_text_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_undericon_text_tv"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_undericon_text_tv"
            android:layout_marginLeft="5dp"
            />




























    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>